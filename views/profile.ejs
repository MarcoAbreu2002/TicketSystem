<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/header.ejs') %>
    <link rel="stylesheet" href="../public/css/styles.css"> <!-- Link to your CSS file -->
</head>
<body>
    <%- include('./partials/navbar.ejs') %>

    <!-- Profile Container -->
    <div class="profile-container">
        <!-- Profile Picture -->
        <div class="profile-image-container">
            <img class="profile-image" src="../public/images/imagemdeperfil.png" alt="Profile Image">
        </div>
        
        <!-- Profile Information -->
        <div class="profile-info">
            <h1 class="profile-username"><%= user.username %></h1>
            <p class="profile-email"><%= user.email %></p> <!-- Optional: User Email -->
            <p class="profile-bio"><%= user.bio %></p> <!-- Optional: User Bio -->
        </div>
        
        <!-- Tickets Section -->
        <div class="tickets-container">
            <h2 class="tickets-header">Tickets Resolved:</h2>
            <% if (tickets && tickets.length > 0) { %>
                <ul class="tickets-list">
                    <% tickets.forEach(ticket => { %>
                        <li class="ticket-item">
                            <p><%= ticket.descricao %></p>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p class="no-tickets">No tickets found.</p>
            <% } %>
        </div>
    </div>
    
    <%- include('./partials/scripts.ejs') %>
</body>
</html>
